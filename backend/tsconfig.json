{
    "compilerOptions": {
      "module": "commonjs",
      "strict": true,
      "baseUrl": "./",
      "outDir": "build",
      "removeComments": true,
      "experimentalDecorators": true,
      "target": "es6",
      "declaration": true,
      "emitDecoratorMetadata": true,
      "strictPropertyInitialization": false,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "importHelpers": true,
      "sourceMap": true,      
      "types": [
        "node"
      ],
      "typeRoots": [
        "node_modules/@types"
      ]
    },
    "include": [
      "./src/**/*.ts"
    ], 
    "files": [
      "./src/index.ts"      
    ], 
    "exclude" : ["src/**/*.test.ts"]
  }